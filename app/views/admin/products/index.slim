.row.ml-0
  .col-sm-3.sidebar
    = render "layouts/dashboard"
  .col-sm-9
    h1  =t("products.index.category")
    button.CN.new
      = link_to new_admin_product_path(@product)
        i.fa.fa-plus-circle
        span= t("products.new.new_product")
    = render 'search_form'
    table.table.table-condensed
      thead
        tr
          td
            b= t(".code")
          td
            b= t("carts.index.name")
          td
            b= t("carts.index.price")
          td
            b= t(".description")
          td
            b= t("carts.index.image")
          td
            b= t("admin.categories.index.modify")
      = render @products
    .paginate 
      = will_paginate @categories
